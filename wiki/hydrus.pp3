# Hydrus
#

filename output hydrus.tex
filename include wiki.pp3

set constellation HYI
set center_rectascension   2.5
set center_declination   -70
set box_height 8
set box_width 7

set faintest_star_disk_magnitude 5

objects_and_labels


reposition HD 12311 E ;

add NGC 104 ;
set_label_text NGC 104 "\\footnotesize 47 Tuc"

add_labels HD 15008  HD 16978 ;  # delta and epsilon Hyi
reposition HD 15008 E ;  # delta Hyi

