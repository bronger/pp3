delete HD 22634  HD 22252 ;   # Making space for "Reticulum"
text Horologium at 3.5 -56 along declination ;

delete NGC 292 ;  # SMC
text "\\footnotesize S\\kern0.1emM\\kern0.1emC" 
  at 1 -72.5 color 0.0 0.0 0.9333 towards N ;

